<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.uis.csc478.timemanagement.repository.TimeManagementRepository">
  <select id="findEmployeeById" resultType="edu.uis.csc478.timemanagement.model.Employee">
    select * from employee where id = #{id}
  </select>
  <select id="findTodayTimeClockEntries" resultType="edu.uis.csc478.timemanagement.model.TimeClock">
    select * from timeClock where id = #{id} and clockDate = convert(date,GETDATE())
  </select>
</mapper>